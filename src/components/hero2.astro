---
export interface Props {
    title: string;
    image: string;
    id:string;
}
const { title, image , id} = Astro.props;
---

<div class="hero min-h-[70vh] bg-base-100 snap-center" id={id}>
    <div class="hero-content flex-col-reverse lg:flex-row-reverse justify-evenly">
        <div class="text-center">
            <h1 class="text-4xl font-bold">{title}</h1>
                <slot />
        </div>
        <img src={image} class="w-96 md:w-2/5 rounded-lg shadow-2xl" />
    </div>
</div>
